<%= javascript_include_tag "form.js" %>

<%= simple_form_for(@user) do |form| %>
  <%= display_flash_messages_object(@user) %>
  <div class="card-body">
    <div class="form-group">
      <%= @user.email %>
    </div>

    <div class="form-group">
      <%= form.text_field :name, placeholder: "Nome", class: "form-control" %>
    </div>


    <%= form.submit class: "btn btn-primary float-right mr-3 my-4" %>
  </div>
<% end %>

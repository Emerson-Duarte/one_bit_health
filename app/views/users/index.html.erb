<div class="card">
  <div class="card-header card-header-text card-header-primary">
    <div class="card-text">
      <h4 class="card-title">Usuários</h4>
    </div>
  </div>
  <div class="card-body">
    <% if @users.any? %>
      <table class="table table-hover table-respoonsive">
        <thead>
          <tr>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Papel</th>
            <th class="text-right">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="linkable cursor-pointer" data-url="<%= user_path(user.id) %>"><%= user.name %></a></td>
              <td class="linkable cursor-pointer" data-url="<%= user_path(user.id) %>"><%= user.email %></td>
              <td class="linkable cursor-pointer" data-url="<%= user_path(user.id) %>"><%= user.role %></td>
              <td class="td-actions text-right">
                <%= link_to edit_user_path(user), class: "btn btn-success", title: "Editar" do %>
                  <i class="material-icons">edit</i>
                <% end %>
                <%= link_to user, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, title: "Excluir", class: "btn btn-danger" do %>
                  <i class="material-icons">close</i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-info mt-2">
        Nenhum usuário cadastrado.
      </div>
    <% end %>
  </div>
</div>

<%= link_to new_user_path, class: "btn btn-primary btn-just-icon btn-action-add btn-round btn-lg", title: "Novo usuário" do %>
  <i class="material-icons">add</i>
<% end %>

<%= render 'layouts/modal', modal_title: "Usuários" %>

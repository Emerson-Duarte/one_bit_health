<div class="card">
  <div class="card-header card-header-text card-header-primary">
    <div class="card-text">
      <h4 class="card-title">Consultas</h4>
    </div>
  </div>
  <div class="card-body">
    <% if @appointments.any? %>
      <table class="table table-hover table-respoonsive">
        <thead>
          <tr>
            <th>Título</th>
            <th>Professional</th>
            <th>Data</th>
            <th class="text-right">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @appointments.each do |appointment| %>
            <tr>
              <td class="linkable cursor-pointer" data-url="<%= treatment_path(appointment.id) %>"><%= appointment.title %></a></td>
              <td class="linkable cursor-pointer" data-url="<%= treatment_path(appointment.id) %>"><%= appointment.professional %></td>
              <td class="linkable cursor-pointer" data-url="<%= treatment_path(appointment.id) %>"><%= date_format(appointment.date) %></td>
              <td class="td-actions text-right">
                <%= link_to edit_appointment_path(appointment), class: "btn btn-success", title: "Editar" do %>
                  <i class="material-icons">edit</i>
                <% end %>
                <%= link_to appointment, method: :delete, data: { confirm: 'Deseja realmente excluir?' }, title: "Excluir", class: "btn btn-danger" do %>
                  <i class="material-icons">close</i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="alert alert-info mt-2">
        Nenhum tratamento cadastrado.
      </div>
    <% end %>
  </div>
</div>

<%= link_to new_appointment_path, class: "btn btn-primary btn-just-icon btn-action-add btn-round btn-lg", title: "Nova consulta" do %>
  <i class="material-icons">add</i>
<% end %>

<div class="col-md-5">
  <div class="card">
    <div class="card-header card-header-text card-header-primary">
      <div class="card-text">
        <h4 class="card-title">Criar Conta</h4>
      </div>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "sign-up-form" }) do |f| %>
        <%= hidden_field_tag "route", "sign_up" %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email", id: "email-sign-up" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Senha", id: "password-sign-up" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmação de senha" %>
        </div>

        <div class="mt-4">
          <%= f.submit "Comece Agora", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-5">
  <div class="card">
    <div class="card-header card-header-text card-header-primary">
      <div class="card-text">
        <h4 class="card-title">Esqueceu sua senha?</h4>
      </div>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="mt-4">
          <%= f.submit "Enviar", class: "btn btn-primary" %>
          <%= link_to "Criar conta", new_registration_path(resource_name), class: "float-right mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="col-md-5">
  <div class="card">
    <div class="card-header card-header-text card-header-primary">
      <div class="card-text">
        <h4 class="card-title">Entrar</h4>
      </div>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "sign-in-form" }) do |f| %>
      <%= hidden_field_tag "route", "sign_in" %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Senha" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.label :remember_me, class: "form-check-label" do %>
              <%= f.check_box :remember_me, class: "form-check-input" %>
              Lembrar-me
              <span class="form-check-sign">
                <span class="check"></span>
              </span>
            <% end %>
          </div>
        <% end %>

        <div class="mt-4">
          <%= f.submit "Entrar", class: "btn btn-primary" %>
          <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), class: "float-right mt-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

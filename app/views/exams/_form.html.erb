<%= javascript_include_tag "form.js" %>

<%= simple_form_for(@exam) do |form| %>
  <%= display_flash_messages_object(@exam) %>
  <div class="card-body">
    <div class="form-group">
      <%= form.text_field :title, placeholder: "Título", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.text_area :description, placeholder: "Descrição", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.datetime_field :exam_date, placeholder: "Data do exame", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.text_field :place, placeholder: "Local do exame", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.select :tag_ids, @tags.map{|tag| [tag.content, tag.id] }, { selected: exam.tags.ids }, { title: "Selecione uma tag" ,multiple: true, class: "form-control selectpicker", data: { style: "btn btn-link" } } %>
    </div>

    <div class="form-group form-file-upload form-file-multiple">
      <%= form.file_field :files, multiple: true, class: "file-upload" %>
      <div class="input-group">
        <input type="text" class="form-control input-name-files" placeholder="Anexos">
        <span class="input-group-btn">
          <label for="exam_files" class="btn btn-fab btn-round btn-primary">
            <i class="material-icons">attach_file</i>
            <div class="ripple-container"></div>
          </label>
        </span>
      </div>
    </div>

    <%= form.submit class: "btn btn-primary float-right mr-3 my-4" %>

  </div>
<% end %>
